<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutConfigureViewFrequency"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:id="@+id/buttonRunWidget"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="@string/button_run_shortcut"
        android:textAppearance="?android:attr/textAppearanceButton" />

    <Button
        android:id="@+id/buttonFinishWidgetConfiguration"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="@string/button_finish_shortcut_configuration"
        android:textAppearance="?android:attr/textAppearanceButton" />
</LinearLayout>