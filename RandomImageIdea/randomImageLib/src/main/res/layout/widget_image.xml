<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageViewWidget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border"
        android:contentDescription="@layout/text_view_initializing"
        android:visibility="gone" >
    </ImageView>

    <ImageView
        android:id="@+id/imageViewWidgetCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border"
        android:contentDescription="@layout/text_view_initializing"
        android:scaleType="centerCrop"
        android:visibility="gone" >
    </ImageView>

    <TextView
        android:id="@+id/textViewWidgetEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7F000000"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/text_no_image"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/buttonNextImage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:contentDescription="@layout/text_view_initializing"
        android:padding="2dp"
        android:src="@drawable/ic_widget_next"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/buttonSettings"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:contentDescription="@layout/text_view_initializing"
        android:padding="2dp"
        android:src="@drawable/ic_widget_settings"
        android:visibility="invisible" />

</FrameLayout>