        android:positiveButtonText="@null"
        android:title="@string/pref_title_widget_list_name"/>
    <ListPreference
        android:entries="@array/timer_duration_names"
        android:entryValues="@array/timer_durations"
        android:key="@string/key_widget_alarm_interval"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_widget_alarm_interval"/>
    <ListPreference
        android:entries="@array/button_style_names"
