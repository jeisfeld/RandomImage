<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="de.jeisfeld.randomimage.underground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:versionCode="23"
    android:versionName="1.1.1">

    <application
        android:name="de.jeisfeld.randomimage.Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_underground"
        android:logo="@drawable/ic_launcher"
        tools:replace="android:icon">
        <activity
            android:name="de.jeisfeld.randomimage.DisplayRandomImageActivity"
            android:label="@string/app_name_short"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name="de.jeisfeld.randomimage.MainConfigurationActivity"
            android:icon="@drawable/ic_launcher_setup_underground"
            android:label="@string/title_icon_main_configuration"
            android:logo="@drawable/ic_launcher"
            tools:replace="android:icon">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>
</manifest>